@model Ianitor.Osp.Backend.Identity.ViewModels.Manage.ChangePasswordViewModel
@{
    ViewData["Title"] = Texts.Backend_Identity_ChangePassword_Title;
}

<div class="row justify-content-center">
    <h1>@Texts.Backend_Identity_ChangePassword_Title</h1>
</div>
<div class="row justify-content-center">
    <p>@Texts.Backend_Identity_ChangePassword_SubTitle</p>
</div>

<partial name="_ValidationSummary"/>

<form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">

    <div class="row justify-content-center">
        <div class="col-sm-4">
            <div class="k-card">
                <div class="k-card-header">
                    <h5 class="k-card-title">@Texts.Backend_Identity_ChangePassword_Title</h5>
                </div>
                <div class="k-card-body">

                    <fieldset>
                        <div class="form-group">
                            <kendo-textbox name="OldPassword" type="password" autocomplete="off">
                                <textbox-label content="@Texts.Backend_Identity_CurrentPassword_Label" floating="true"/>
                            </kendo-textbox>
                            <span asp-validation-for="OldPassword" class="sg-validation-error"></span>
                        </div>
                        <div class="form-group">
                            <kendo-textbox name="NewPassword" type="password" autocomplete="off">
                                <textbox-label content="@Texts.Backend_Identity_NewPassword_Label" floating="true"/>
                            </kendo-textbox>
                            <span asp-validation-for="NewPassword" class="sg-validation-error"></span>
                        </div>
                        <div class="form-group">
                            <kendo-textbox name="ConfirmPassword" type="password" autocomplete="off">
                                <textbox-label content="@Texts.Backend_Identity_ConfirmNewPassword_Label" floating="true"/>
                            </kendo-textbox>
                            <span asp-validation-for="ConfirmPassword" class="sg-validation-error"></span>
                        </div>
                    </fieldset>

                </div>
                <div class="k-card-actions k-card-actions-stretched">

                    <kendo-button name="button" type="submit"
                                  class="k-primary">
                        @Texts.Backend_Identity_ChangePassword_Button_Label
                    </kendo-button>
                </div>
            </div>
        </div>
    </div>

</form>