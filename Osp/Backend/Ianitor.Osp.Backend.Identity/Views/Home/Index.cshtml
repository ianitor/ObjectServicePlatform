@model Ianitor.Osp.Backend.Identity.ViewModels.Home.HomeViewModel

@{
    ViewData["Title"] = Texts.Backend_Identity_Home_Title;
}

<div class="row justify-content-center">
    <div class="col-sm-10 text-center">
        <h1>
            <img class="icon" src="~/favicon-32x32.png">
            @string.Format(Texts.Backend_Identity_Home_Welcome_Label, OemOptions.Value.ApplicationName, User.Identity.Name)
        </h1>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-sm-10 text-center">
        <p>@string.Format(Texts.Backend_Identity_Home_Introduction_Label, OemOptions.Value.ApplicationName)</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="d-flex flex-wrap">

        <partial name="UserInfo"></partial>

        <div class="k-card m-2">
            <div class="k-card-header">
                <h5 class="k-card-title">
                    <p>@Texts.Backend_Identity_Home_QuickAccess_Header</p>
                </h5>
            </div>
            <div class="k-card-body">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a asp-controller="Manage" asp-action="Index" class="nav-link">@Texts.Backend_Identity_Navigation_Manage_Header</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Manage" asp-action="ManageLogins" class="nav-link">@Texts.Backend_Identity_Navigation_ManageLogIns_Header</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Device" asp-action="Index" class="nav-link">@Texts.Backend_Identity_Navigation_DeviceLogin_Header</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>


</div>